<div class="operation">
  <div class="header">
    <div class="right">
  <%= link_to  evaluate_operation_path(operation), :method => :evaluate do%>
        <i class="icon-cogs"></i> 
    <% end %>
    <%= link_to edit_operation_path(operation) do %>
      <i class="icon-pencil"></i> 
  <% end %>

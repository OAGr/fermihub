      :method => :delete,
      :confirm => "Are you sure you want to delete this operation?" do %>
      <i class="icon-remove"></i> 
    <% end %>
    
    </div>
  </div>
    <div class="body">
      <div class="operator">
      <%= operation.operator || "_" %>
    </div>
    </div>
  </div>

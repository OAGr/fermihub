<h3> Distributions </h3>
<div class="row">
  <% @distributions.each do |distribution| %>
    <div class="span2">
    <%= render :partial => 'distributions/distribution.html.erb', :locals =>{:distribution => distribution}  %>
  </div>
<% end %>
<%= link_to "+", new_independent_path, :class => "btn btn-primary" %>
</div>
</br></br>
<h3> Operations </h3>
<div class="row">
  <div class="span2">
    <h4> Inputs </h4>
  </div>
  <div class="span2">
    <h4> Operator </h4>
  </div>
  <div class="span2">
    <h4> Output </h4>
  </div>
  <div class="span5">
    <h4> Equation </h4>
  </div>
</div>
<% @operations.each do |operation| %>
  <div class="row">
  <div class="span2">
    <% operation.inputs.each do |input| %>
      <div class="row">
      <div class="span2">
        <%= render :partial => 'distributions/distribution.html.erb', :locals =>{:distribution => input, :operation => operation}  %>
      </div><!--/row-->
    </div><!--/row-->
  <% end %>
  </div>
  <div class="span1">
    <%= render operation %>
  </div>
  <div class="span2">
    <%= render :partial => 'distributions/distribution.html.erb', :locals =>{:distribution => operation.dependent}  %>
  </div>
  <div class="span5">
    <%= operation.equation %>
  </div>
</div>
<hr style="margin:30px 0 0 0; border:none">
<% end %>
</br>

<%= link_to "+", new_operation_path, :class => "btn btn-primary" %>


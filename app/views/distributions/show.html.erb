<%- model_class = Distribution -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @distribution.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interval) %>:</strong></dt>
  <dd><%= @distribution.interval %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wideness) %>:</strong></dt>
  <dd><%= @distribution.wideness %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              distributions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_distribution_path(@distribution), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              distribution_path(@distribution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= form_for [@user, @model, @distribution], :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>
<% if @distribution.class == Independent %>
<div class="control-group">
  <%= f.label :mean, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :mean, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :spread, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :spread, :class => 'text_field' %>
  </div>
</div>
<% end %>

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
</div>
<% end %>
